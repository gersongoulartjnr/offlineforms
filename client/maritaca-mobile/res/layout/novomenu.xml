<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/mobile_background"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="20dip" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true">


            <TextView
                android:id="@+id/text_url_google_forms"
                android:gravity="center"
                android:shadowColor="#0F0F0F"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.5"
                android:text="Insira o link do seu formulário Google no modo de edição"
                android:textAppearance="@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse" />


            <EditText
                android:id="@+id/txtIdForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/black">

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnCarregaGS"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:background="@color/azul_offline_forms"
                android:text="CARREGAR FORMULÁRIO"
                android:textAppearance="@style/TextAppearance.Sherlock.Light.Widget.PopupMenu.Large" />

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo_fundo_branco" />


        </TableLayout>
    </RelativeLayout>

</LinearLayout>