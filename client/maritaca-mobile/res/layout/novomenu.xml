<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.18"
        android:background="@drawable/mobile_background"
        android:orientation="vertical"
        android:padding="20dip">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btnCarregaGS"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:shadowColor="#0F0F0F"
            android:text="Clique no botão abaixo para carregar a partir dos formulários do seu Google Drive"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btnCarregaGSDrive"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="22dp"
            android:background="@color/azul_offline_forms"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="CARREGAR FORMULÁRIO DO DRIVE"
            android:textAppearance="@style/TextAppearance.Sherlock.Light.Widget.PopupMenu.Large"
            android:textColor="@android:color/white"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/logo_fundo_branco"
            android:layout_below="@+id/btnCarregaGSDrive"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>