<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/mobile_background"
        android:orientation="vertical"
        android:padding="20dip">

        <Button
            android:id="@+id/btnReplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSync"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/azul_offline_forms"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="TROCAR DE FORMULÁRIO"
            android:theme="@style/TextAppearance.Sherlock.Light.Widget.PopupMenu.Large" />

        <Button
            android:id="@+id/btnSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCollect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@color/azul_offline_forms"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="SINCRONIZAR"
            android:textAlignment="center"
            android:theme="@style/TextAppearance.Sherlock.Light.Widget.PopupMenu.Large" />

        <Button
            android:id="@+id/btnCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:autoText="true"
            android:background="@color/azul_offline_forms"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="REALIZAR COLETAS"
            android:theme="@style/TextAppearance.Sherlock.Light.Widget.PopupMenu.Large" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="500px"
            android:layout_height="500px"
            android:src="@drawable/logo_fundo_branco"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/btnReplace"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</LinearLayout>