<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Holo.maritaca" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_maritaca</item>
        <item name="android:popupMenuStyle">@style/maritaca_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/maritaca_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/maritaca_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/maritaca_DropDownNav</item>
        <item name="android:actionBarStyle">@style/maritaca_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_offlineforms</item>
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.maritaca.widget</item>

    </style>

    <style name="maritaca_solid_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_maritaca</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_maritaca</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_maritaca</item>
        <item name="android:progressBarStyle">@style/maritaca_ProgressBar</item>
    </style>

    <style name="maritaca_transparent_ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_maritaca</item>
        <item name="android:progressBarStyle">@style/maritaca_ProgressBar</item>
    </style>

    <style name="maritaca_PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_maritaca</item>	
    </style>

    <style name="maritaca_DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_maritaca</item>
    </style>

    <style name="maritaca_ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_maritaca</item>
    </style>

    <style name="maritaca_DropDownNav" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_maritaca</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_maritaca</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_maritaca</item>
    </style>
    
    <style name="maritaca_ProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_maritaca</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.maritaca.widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/maritaca_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/maritaca_DropDownListView</item>
    </style>

</resources>