<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.AC.maritaca" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_maritaca</item>
        <item name="popupMenuStyle">@style/maritaca_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/maritaca_DropDownListView</item>
        <item name="actionBarTabStyle">@style/maritaca_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/maritaca_DropDownNav</item>
        <item name="actionBarStyle">@style/maritaca_solid_ActionBar</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_maritaca</item>
        <item name="android:popupMenuStyle">@style/maritaca_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/maritaca_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/maritaca_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/maritaca_DropDownNav</item>
        <item name="android:actionBarStyle">@style/maritaca_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_offlineforms</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.maritaca.widget</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.maritaca.widget</item>

    </style>

    <style name="maritaca_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_offlineforms</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_maritaca</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_maritaca</item>
        <item name="progressBarStyle">@style/maritaca_ProgressBar</item>
        <item name="progressBarPadding">32dip</item>
        <item name="itemPadding">8dip</item>

        <item name="android:background">@drawable/ab_solid_offlineforms</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_maritaca</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_maritaca</item>
        <item name="android:progressBarStyle">@style/maritaca_ProgressBar</item>
    </style>

    <style name="maritaca_transparent_ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_maritaca</item>
        <item name="progressBarStyle">@style/maritaca_ProgressBar</item>
        
        <item name="android:background">@drawable/ab_transparent_maritaca</item>
        <item name="android:progressBarStyle">@style/maritaca_ProgressBar</item>
    </style>
	
    <style name="maritaca_PopupMenu" parent="@style/Widget.Sherlock.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_offlineforms</item>
    </style>
	
    <style name="maritaca_DropDownListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_maritaca</item>
    </style>

    <style name="maritaca_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_maritaca</item>

        <item name="android:background">@drawable/tab_indicator_ab_maritaca</item>
    </style>
	
    <style name="maritaca_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_maritaca</item>

        <item name="android:background">@drawable/spinner_background_ab_maritaca</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_offlineforms</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_maritaca</item>
    </style>
    
    <style name="maritaca_ProgressBar" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_maritaca</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.maritaca.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/maritaca_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/maritaca_DropDownListView</item>
        
        <item name="android:popupMenuStyle">@style/maritaca_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/maritaca_DropDownListView</item>
    </style>

</resources>